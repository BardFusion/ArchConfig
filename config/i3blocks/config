# i3blocks config file
# 
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
# 
# List of valid properties:
# 
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
# 
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=10
markup=none

[network]
interval=10
min_width=110
align=center

[bandwidth]
instance=in
interval=2
min_width=110
align=center

[bandwidth]
instance=out
interval=2
min_width=110
align=center

[space]
label=ROOT
instance=/;perc
interval=60

[space]
label=HOME
instance=/home;perc
interval=60

[audio]
label=VOL
interval=5
min_width=90
align=center

[microphone]
label=MIC
interval=5
min_width=90
align=center

[brightness]
label=BRT
interval=5
min_width=90
align=center

[cpu]
label=CPU
interval=5
min_width=90
align=center

[temperature]
interval=10
min_width=50
align=center

[memory]
label=RAM
instance=mem;used
interval=30
min_width=110
align=center

[battery]
label=BAT
interval=10
min_width=90
align=center

[date]
interval=60

[time]
interval=5
